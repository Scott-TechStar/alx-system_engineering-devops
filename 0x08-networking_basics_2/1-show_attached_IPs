#!/usr/bin/env bash
# Bash script that displays all active IPv4 IPs on the machine itâ€™s executed on.

# Get all active network interfaces
interfaces=$(ip addr | grep 'state UP' | awk '{print $2}' | cut -d':' -f1)

# Loop through each interface and get its IPv4 address
for interface in $interfaces; do
    ipv4=$(ip addr show $interface | grep 'inet ' | awk '{print $2}' | cut -d'/' -f1)
    echo "Interface $interface - IPv4: $ipv4"
done